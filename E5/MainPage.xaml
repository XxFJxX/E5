<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E5.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="Base" Placeholder="Ingrese Base"
                   Keyboard="Numeric"/>

            <Entry x:Name="Altura" Placeholder="Ingrese Altura"
                   Keyboard="Numeric"/>

            <Label x:Name="la"
                   Text="El perimetro es la superficie es "/>

            <Button Text="Calcular"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
